{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "lib": ["ES2022"],
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "strict": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "allowJs": true,
      "declaration": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
  }
  